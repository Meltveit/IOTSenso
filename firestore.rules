rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can read and write their own user document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Users can manage their own subcollections (buildings, sensors, etc.)
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
      
       match /sensors/{sensorId}/readings/{readingId} {
        allow read: if isOwner(userId);
        // Cloud Functions or other backend processes write readings.
        allow write: if false; 
      }
    }
    
    // Public collection for available sensors.
    // Authenticated users can read to verify sensor IDs.
    // Only backend processes can write/create new inventory.
    match /available_sensors/{sensorId} {
        allow read: if isAuthenticated();
        allow write: if false;
    }
    
    // Public read for products
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
    