rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can read and write their own user document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Buildings subcollection
      match /buildings/{buildingId} {
        allow read, write: if isOwner(userId);
      }
      
      // Sensors subcollection
      match /sensors/{sensorId} {
        allow read, write: if isOwner(userId);
        
        // Readings subcollection (nested under sensors)
        match /readings/{readingId} {
          allow read: if isOwner(userId);
          allow write: if false; // Only Cloud Functions can write readings
        }
      }
      
      // Alerts subcollection
      match /alerts/{alertId} {
        allow read, write: if isOwner(userId);
      }
      
      // Other subcollections
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ✅ CRITICAL: Allow collectionGroup queries on sensors for duplicate checking
    // This rule allows authenticated users to query sensors across all users
    // to check if a sensor ID is already registered
    match /{path=**}/sensors/{sensorId} {
      allow read: if isAuthenticated();
    }
    
    // ✅ CRITICAL: Allow collectionGroup queries on readings
    match /{path=**}/readings/{readingId} {
      allow read: if isAuthenticated();
    }
    
    // Public collection for available sensors (if you implement this feature)
    match /available_sensors/{sensorId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // Public read for products
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
  }
}